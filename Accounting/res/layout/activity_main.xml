<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >


	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="50dip"
	    android:background="@drawable/android_menu_bg">
	    
	    <TextView 
		    android:id="@+id/dateDisplay" 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:textSize="20sp"
		    android:paddingLeft="20dip"
		    android:layout_centerVertical="true"
		    android:textColor="@android:color/white"
	    	/>
	</RelativeLayout>
	
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="20sp">
	    <RelativeLayout 
	        android:id="@+id/layoutIncome"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="5dip">
	    
			<TextView
			    android:id="@+id/textIncome" 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:textSize="20sp"
			    android:text="收入总额：￥"
			    android:textColor="@android:color/black"
		   		/>
			<TextView 
			    android:id="@+id/textViewIncome" 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:textSize="20sp"
			    android:text="5000"
			    android:textColor="@color/green"
			    android:layout_toRightOf="@id/textIncome"
			    />
			<TextView 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:textSize="20sp"
			    android:layout_alignParentRight="true"
			    android:paddingRight="5dip"
			    android:text=">"
			    />
		</RelativeLayout>
		<View
	        android:layout_width="fill_parent"
	        android:layout_height="1dip"
	        android:layout_marginTop="5dip"
	        android:background="@android:color/black" />
		<RelativeLayout 
		    android:id="@+id/layoutSpending"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="5dip">
	    
			<TextView
			    android:id="@+id/textSpend" 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:textSize="20sp"
			    android:text="支出总额：￥"
			    android:textColor="@android:color/black"
		   		/>
			<TextView 
			    android:id="@+id/textViewSpend" 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:textSize="20sp"
			    android:text="5000"
			    android:textColor="@color/red"
			    android:layout_toRightOf="@id/textSpend"
			    />
			<TextView 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:textSize="20sp"
			    android:layout_alignParentRight="true"
			    android:paddingRight="5dip"
			    android:text=">"/>
		</RelativeLayout>
		<View
	        android:layout_width="fill_parent"
	        android:layout_height="1dip"
	        android:layout_marginTop="5dip"
	        android:background="@android:color/black" />
		<RelativeLayout 
		    android:id="@+id/remaining"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="5dip">
	    
			<TextView
			    android:id="@+id/textRemain" 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:textSize="20sp"
			    android:text="余        额：￥"
			    android:textColor="@android:color/black"
		   		/>
			<TextView 
			    android:id="@+id/textViewRemain" 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:textSize="20sp"
			    android:text="4500"
			    android:layout_toRightOf="@id/textRemain"
			    />
			<TextView 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:textSize="20sp"
			    android:layout_alignParentRight="true"
			    android:paddingRight="5dip"
			    android:text=">"/>
		</RelativeLayout>
		<View
	        android:layout_width="fill_parent"
	        android:layout_height="1dip"
	        android:layout_marginTop="5dip"
	        android:background="@android:color/black" />
	</LinearLayout>
	
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
			<RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:paddingTop="5dip">
				<Button 
				    android:id="@+id/btnStartAccount"
				    android:layout_width="wrap_content" 
				    android:layout_height="wrap_content" 
				    android:textSize="20sp"
				    android:layout_alignParentLeft="true"
				    android:paddingRight="5dip"
				    android:text="记一笔"/>
				<Button 
				    android:id="@+id/btnSelectAccount"
				    android:layout_width="wrap_content" 
				    android:layout_height="wrap_content" 
				    android:textSize="20sp"
				    android:layout_alignParentRight="true"
				    android:paddingRight="5dip"
				    android:text="查看流水"/>
			</RelativeLayout>
	</RelativeLayout>
</LinearLayout>