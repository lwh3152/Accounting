<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lwh.accounting"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="9" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.lwh.accounting.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- android:theme="@android:style/Theme.NoTitleBar" -->
        <activity android:name="com.lwh.accounting.AddAccount" ></activity>
        <activity android:name="com.lwh.accounting.AccountDetail" ></activity>
        <activity android:name="com.lwh.accounting.AccountSet" ></activity>
    </application>

</manifest>
